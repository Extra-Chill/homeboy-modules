{
  "name": "GitHub",
  "version": "1.0.0",
  "icon": "arrow.triangle.branch",
  "description": "GitHub release publishing for the Homeboy workflow system",
  "author": "Extra Chill",

  "actions": [
    {
      "id": "release.publish",
      "label": "Publish GitHub Release",
      "type": "command",
      "command": "bash \"{{module_path}}/scripts/publish-github.sh\"",
      "payload": {
        "release": "{{payload.release}}",
        "config": "{{payload.config}}"
      }
    }
  ]
}
